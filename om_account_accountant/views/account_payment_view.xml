<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!-- Inherit tree view to add effective_date field with string -->
    <record id="view_account_payment_tree_inherit" model="ir.ui.view">
        <field name="name">account.payment.tree.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="after">
                <field name="effective_date" string="Effective Date" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>
