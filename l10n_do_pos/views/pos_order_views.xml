<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="l10n_do_pos_view_pos_pos_form" model="ir.ui.view">
        <field name="name">l10n.do.pos.view.pos.pos.form</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">

            <xpath expr="//button[@name='refund']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('ncf', '!=', False), '|', ('state', '=', 'draft'), ('has_refundable_lines', '=', False)]}</attribute>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Fiscal data" attrs="{'invisible':[('ncf', '=', False)]}" id="l10n_do_pos_page_fiscal_data">
                    <group>
                        <group>
                            <field name="ncf" readonly="1"/>
                            <field name="ncf_expiration_date" readonly="1"/>
                            <field name="fiscal_type_id" readonly="1"/>
                            <field name="ncf_origin_out" attrs="{'invisible':[('ncf_origin_out', '=', '')]}" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

    <record id="l10n_do_pos_view_pos_order_tree" model="ir.ui.view">
        <field name="name">l10n.do.pos.view.pos.order.tree</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='name']" position="after">
                <field name="ncf"/>
            </xpath>

        </field>
    </record>

    <record id="l10n_do_pos_view_pos_order_ncf_log_tree" model="ir.ui.view">
        <field name="name">l10n.do.pos.view.pos.order.ncf.log.tree</field>
        <field name="model">pos.order.ncf.log</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false" edit="false">
                <field name="l10n_do_ncf"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="l10n_do_pos_view_pos_order_ncf_log_form" model="ir.ui.view">
        <field name="name">l10n.do.pos.view.pos.order.ncf.log.form</field>
        <field name="model">pos.order.ncf.log</field>
        <field name="arch" type="xml">
            <form create="false" delete="false" edit="false">
                <group>
                    <field name="l10n_do_ncf"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="order_json"/>
                </group>
            </form>
        </field>
    </record>

    <record id="l10n_do_pos_view_pos_order_ncf_log_search" model="ir.ui.view">
        <field name="name">l10n.do.pos.view.pos.order.ncf.log.search</field>
        <field name="model">pos.order.ncf.log</field>
        <field name="arch" type="xml">
            <search>
                <field name="l10n_do_ncf"/>
                <field name="company_id"/>
                <field name="order_json"/>
            </search>
        </field>
    </record>

    <record id="action_pos_order_ncf_log" model="ir.actions.act_window">
        <field name="name">NCF Logs</field>
        <field name="res_model">pos.order.ncf.log</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="l10n_do_pos_view_pos_order_ncf_log_tree"/>
        <field name="search_view_id" ref="l10n_do_pos_view_pos_order_ncf_log_search"/>
    </record>

    <menuitem id="menu_pos_order_ncf_log" name="NCF Logs" parent="point_of_sale.menu_point_config_product" action="action_pos_order_ncf_log" groups="base.group_no_one"/>

</odoo>
