<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit.quotation_met</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- add fields after the "sale_ok" field -->
            <xpath expr="//field[@name='sale_ok']" position="before">
                <field name="is_restricted_user"/>
                <label for="is_restricted_user"/>
                <field name="restricted_user_id"
                       attrs="{'required': [('is_restricted_user', '=', True)], 
                               'invisible': [('is_restricted_user', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>

