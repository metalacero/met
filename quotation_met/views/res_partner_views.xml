<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Heredar la vista de formulario de partner para cambiar el label de property_payment_term_id -->
    <record id="res_partner_form_view_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.quotation_met</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Cambiar el label de property_payment_term_id a "Plazo de pago" -->
            <xpath expr="//field[@name='property_payment_term_id']" position="attributes">
                <attribute name="string">Plazo de pago</attribute>
            </xpath>
            <!-- Agregar campo invoice_type en el grupo de ventas -->
            <xpath expr="//group[@name='sale']" position="inside">
                <field name="invoice_type"/>
                <field name="ignore_fiscal_type"/>
            </xpath>
        </field>
    </record>
</odoo>
