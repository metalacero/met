<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Rule to restrict products by user -->
        <!-- Admins can see all products -->
        <record id="product_template_restricted_user_rule" model="ir.rule">
            <field name="name">Product Restricted User Rule</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field eval="True" name="global"/>
            <field name="domain_force">[
                '|',
                ('is_restricted_user', '=', False),
                '|',
                ('restricted_user_id', '=', False),
                ('restricted_user_id', '=', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="product_product_restricted_user_rule" model="ir.rule">
            <field name="name">Product Variant Restricted User Rule</field>
            <field name="model_id" ref="product.model_product_product"/>
            <field eval="True" name="global"/>
            <field name="domain_force">[
                '|',
                ('product_tmpl_id.is_restricted_user', '=', False),
                '|',
                ('product_tmpl_id.restricted_user_id', '=', False),
                ('product_tmpl_id.restricted_user_id', '=', user.id)
            ]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>

