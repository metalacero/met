<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.form.inherit.custom_product</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!-- Add is_special and price_per_measurement fields after purchase unit of measure -->
            <xpath expr="//field[@name='uom_po_id']" position="after">
                <field name="is_special"/>
                <field name="price_per_measurement" attrs="{'invisible': [('is_special', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
