<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sale_order_variable_measurement" model="ir.ui.view">
        <field name="name">sale.order.line.form.variable_measurement</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom_qty']" position="after">
                <field name="variable_measurement" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom_qty']" position="after">
                <field name="measurement" attrs="{ 'readonly': [('variable_measurement', '=', False)] }"/>
            </xpath>
        </field>
    </record>
</odoo>
