<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit manufacturing order form view to show variant information -->
    <record id="mrp_production_form_view_inherit" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit.custom_mrp_variant_bom</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <!-- Add variant field after product_id field -->
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="variant_id" readonly="1" attrs="{'invisible': [('variant_id', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
